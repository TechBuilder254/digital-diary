  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "start:windows": "concurrently \"npm run server:windows\" \"npm run client:windows\"",
    "start:mac": "concurrently \"npm run server:mac\" \"npm run client:mac\"",
    "start:mac-no-browser": "concurrently \"npm run server:mac\" \"npm run client:mac-no-browser\"",
    "server": "nodemon server/server.js",
    "server:windows": "nodemon server/server.js",
    "server:mac": "nodemon server/server.js",
    "client": "cd frontend && npm start",
    "client:windows": "cd frontend && npm start",
    "client:mac": "cd frontend && npm start",
    "client:mac-no-browser": "cd frontend && npm run start:mac",
    "install:all": "npm install && cd frontend && npm install",
    "setup": "npm run install:all && npm run create-dirs",
    "create-dirs": "node scripts/create-dirs.js",
    "test-cross-platform": "node scripts/test-cross-platform.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
